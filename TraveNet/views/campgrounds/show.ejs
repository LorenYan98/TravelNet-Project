<% layout('./layouts/boilerplate') %>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <img src="<%= campground.image %>" class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campground.location %>
                    </li>
                    <li class="list-group-item">
                        $<%= campground.price %>/night
                    </li>
                </ul>

                <div class="card-body">
                    <a href="/travelnet/<%= campground._id %>/edit " class="btn btn-outline-info card-link">
                        Edit</a>
                    <form action="/travelnet/<%= campground._id %>?_method=DELETE" class="card-link d-inline"
                        method="POST">
                        <button class="btn btn-outline-danger ">Delete</button>
                    </form>

                </div>
                <a href="/travelnet" class="btn btn-outline-dark">Back to the main</a>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>

        </div>
        <div class="col-6">
            <h3 class="mt-3">Leave your review</h3>
            <form action="/travelnet/<%= campground._id %>/reviews" method="POST" class="validated-form" novalidate>
                <div class="my-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" class="form-range" id="rating" name="review[rating]" min="1" max="5">
                </div>
                <div class="mb-3">
                    <label for="body" class="form-label">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                </div>
                <button class="btn btn-success mb-3">Submit</button>

            </form>

            <% for(let review of campground.reviews){ %>
                <div class="mb-3 card">
                    <div class="card-body">
                        <h5 class="card-title">Rating: <%= review.rating %>
                        </h5>
                        <p class="card-text">Reviews: <%= review.body %>
                        </p>
                        <form action="/travelnet/<%= campground._id %>/reviews/<%= review._id%>?_method=DELETE"
                            method="POST">
                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
        </div>
    </div>